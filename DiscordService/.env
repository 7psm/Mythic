# ==============================================
# CONFIGURATION DISCORD BOT
# ==============================================

# Token de votre bot Discord (obligatoire)
DISCORD_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# ID de votre serveur Discord (obligatoire)
DISCORD_GUILD_ID=YOUR_GUILD_ID_HERE

# ID du salon pour les notifications de commandes (obligatoire)
DISCORD_CHANNEL_ID=YOUR_CHANNEL_ID_HERE

# ID du rôle admin à ping pour les nouvelles commandes
ADMIN_ROLE_ID=YOUR_ADMIN_ROLE_ID_HERE

# ID du salon pour les logs du bot (optionnel)
LOG_CHANNEL_ID=YOUR_LOG_CHANNEL_ID_HERE

# ==============================================
# CONFIGURATION API
# ==============================================

# Port pour l'API (défaut: 3000)
PORT=3000

# Secret pour l'authentification API (changez-le !)
API_SECRET=votre_secret_super_securise_ici

# Environnement (development/production)
NODE_ENV=development

# ==============================================
# CONFIGURATION AVANCÉE (OPTIONNEL)
# ==============================================

# URL de base de votre site web
WEBSITE_URL=https://votre-site.com

# Database URL (si vous voulez stocker les commandes)
DATABASE_URL=your_database_url_here

# Webhook URL pour des notifications backup
BACKUP_WEBHOOK_URL=your_backup_webhook_url